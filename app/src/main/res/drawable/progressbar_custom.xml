<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="2000"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">

    <shape
        android:innerRadius="15dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="40dp"
            android:width="40dp" />

        <gradient
            android:centerColor="@color/pink_A200"
            android:centerY="0.5"
            android:endColor="@color/pink_A400"
            android:startColor="@color/pink_A100"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>