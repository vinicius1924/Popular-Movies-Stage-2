<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.vinicius.popularmoviesstage2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MvpApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.movies_list_activity.MoviesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.movie_activity.MovieActivity"
            android:parentActivityName=".view.movies_list_activity.MoviesListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.movies_list_activity.MoviesListActivity">
            </meta-data>
        </activity>

        <provider
            android:name=".database.MovieProvider"
            android:authorities="com.example.vinicius.popularmoviesstage2"/>

        <service
            android:name=".services.DownloadIntentService"
            android:exported="false">
        </service>
    </application>

</manifest>